{
  "manifest_version": 3,
  "name": "夜莺钱包",
  "version": "1.3.1",
  "description": "夜莺钱包插件",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "exclude_matches": [
        "*://chrome.google.com/*",
        "*://chromewebstore.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js", "js/protocol/dapp-protocol.js"],
      "matches": [
        "https://*/*",
        "http://*/*"
      ]
    }
  ]
}
